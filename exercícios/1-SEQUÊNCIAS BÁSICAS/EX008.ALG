algoritmo "ex008"
var
km , hm , dam , m , dcm , cm , mm: real
inicio
escreva ("Informe uma distância em metros: ")
leia (m)
km <- m/1000
hm <- m/100
dam <- m/10
dcm <- m*10
cm <- m*100
mm <- m*1000
escreval (m, "metros em outras medidas é: ")
escreval(km, "km")
escreval (hm, "hm")
escreval (dam, "dam")
escreval(dcm, "dmc")
escreval (cm, "cm")
escreva (mm, "mm")

fimalgoritmo